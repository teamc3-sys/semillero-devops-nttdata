pipeline {
    agent any
    tools {
        gradle 'Gradle 7.5.1'
    }
    stages {
        stage('Build') {
            steps {
                script{
                sh """
                cd rest
                gradle build
                """
            }
            }
        }
        stage('test') {
            steps {
                //sh 'gradle docker'
                echo 'test succesfull'
            }
        }
        stage('Build Docker Image') {
            steps {
                script{
                 sh"""
                      cd rest
                      docker login -u $DOCKER_USER -p $DOCKER_PASSWORD
                      docker build -t test/test:1.0 .
                      docker push $DOCKER_USER/test:1.0
                    """
                }
                echo 'succesfull'
            }
        }
        stage('Deployment') {
            steps {
                script{
                sh """
                az login 
                cd rest/k8s
                kubectl apply -f ms-rest-yaml
                """
                }
                echo 'succesfull'
            }
        }
    }
}
