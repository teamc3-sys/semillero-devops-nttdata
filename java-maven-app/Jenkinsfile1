pipeline {
    agent any
    
    tools {
        maven 'mavenjenkins'
    }
    
    stages {
        stage('Build') {
            steps {
                sh 'cd java-maven-app'
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'cd java-maven-app'
                sh 'mvn test'
            }
            post {
                always {
                    sh 'cd java-maven-app'
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deploy') {
            steps {
                sh 'cd java-maven-app'
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}
