pipeline {
    agent any
    
    tools {
        maven 'mavenjenkins'
    }
    
    stages {
        stage('Build') {
            steps {
                script{
                sh """
                cd java-maven-app
                echo "hola Ramiro"
                pwd
                mvn -B -DskipTests clean package
                """
            }
                
            }
        }
        stage('Test') {
            steps {
            script{
                sh """
                cd java-maven-app
                mvn test
                """
            }    
                
            }
            post {
                always {
                    script{
                sh """
                cd java-maven-app
                junit 'target/surefire-reports/*.xml'
                """
            }
                }
            }
        }
        stage('Deploy') {
            steps {
                script{
                sh """
                cd java-maven-app
                sh './jenkins/scripts/deliver.sh'
                """
            }
            }
        }
    }
}
