pipeline {
    agent any
    
    tools {
        maven 'mavenjenkins'
    }
    
    stages {
        stage('Build') {
            steps {
                script{
                sh """
                cd java-maven-app
                echo "hola Ramiro"
                pwd
                mvn -B -DskipTests clean package
                """
            }
                
            }
        }
        stage('Test') {
            steps {
                script{
                sh """
                cd java-maven-app
                mvn test
                """
            }
                
            }
            post {
                always {
                    junit 'java-maven-app/target/surefire-reports/*.xml'                    
                }
            }
        }
        stage('Deliver') {
            steps {
                script{
                sh """
                cd java-maven-app
                pwd
                ls ./jenkins/scripts
                './jenkins/scripts/deliver.sh' 
                """
            }
                              
            }
        }
    }
}
